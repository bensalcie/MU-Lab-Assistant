<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.home.AddEquipmentFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_margin="20dp"

              android:layout_height="wrap_content">

              <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent"
                  android:inputType="textPersonName"
                  android:id="@+id/etName"

                  android:hint="Name"

                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_margin="20dp"

              android:layout_height="wrap_content">

              <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent"
                  android:inputType="number"
                  android:id="@+id/etCost"

                  android:hint="Cost"

                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_margin="20dp"


              android:layout_height="wrap_content">

              <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent"
                  android:lines="5"
                  android:maxLines="5"
                  android:gravity="start"
                  android:id="@+id/etDescription"
                  android:hint="Description"

                  android:layout_height="wrap_content"/>
          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textview.MaterialTextView
              android:layout_width="match_parent"
              android:textSize="20sp"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:textStyle="bold"
              android:text="Tap to Add equiptment images"
              android:layout_height="wrap_content"/>
          <HorizontalScrollView

              android:layout_width="match_parent"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:id="@+id/ivOne"
                      android:layout_width="200dp"
                      android:scaleType="centerCrop"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:src="@android:drawable/ic_menu_gallery"
                      android:layout_height="200dp"/>
                  <ImageView
                      android:id="@+id/ivTwo"

                      android:layout_width="200dp"
                      android:scaleType="centerCrop"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:src="@android:drawable/ic_menu_gallery"
                      android:layout_height="200dp"/>
                  <ImageView
                      android:id="@+id/ivThree"
                      android:layout_width="200dp"
                      android:layout_marginEnd="20dp"
                      android:layout_marginStart="20dp"
                      android:scaleType="centerCrop"
                      android:src="@android:drawable/ic_menu_gallery"
                      android:layout_height="200dp"/>
              </LinearLayout>
          </HorizontalScrollView>

          <RadioGroup
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content">
              <RadioButton
                  android:id="@+id/rbBooked"
                  android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="Booked"
                  android:layout_height="wrap_content"/>
              <RadioButton
                  android:checked="true"
                  android:id="@+id/rbNotBooked"
                  android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="Not Booked"
                  android:layout_height="wrap_content"/>


          </RadioGroup>


          <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
              android:layout_width="match_parent"
              android:text="Add equipment"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="120dp"
              android:layout_marginStart="60dp"
              android:layout_marginEnd="60dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:id="@+id/btnAddEquipment"
              android:layout_height="wrap_content"/>

      </LinearLayout>
  </ScrollView>

</FrameLayout>